{% extends 'base.html.twig' %}

{% block title %}Site des LP de l'IUT de Montpellier{% endblock %}

{% block body %}

	<div class="jumbotron p-3 p-md-5 text-white rounded bg-image-home">
		<div class="col-md-8 rounded bg-dark-opacity p-3">
			<h1 class="display-4 font-italic">Bienvenue sur le site de l'<strong>IUT</strong></h1>
			<p class="lead my-3">Futur candidat ? Ou simple curieux... Découvrez dès maintenant l'école et ses formations !</p>
			<p class="lead mb-0"><a href="#" class="text-white font-weight-bold">En savoir plus...</a></p>
		</div>
	</div>


	<main role="main" class="container">
		<div class="row">
			<div class="col-md-8 blog-main">
				<h3 class="pb-3 mb-4 font-italic border-bottom">Actualités</h3>

{% for article in articles %}
				<div class="blog-post">
					<h2 class="blog-post-title">{{ article.titre}}</h2>
					<p class="blog-post-meta font-italic">Publié le : {{article.date | date('d/m/Y') }}</p>
					{{ article.description | raw }}
					<a href="#">Lire la suite</a>

				</div><!-- /.blog-post -->
    {% endfor %}


			</div><!-- /.blog-main -->


			<aside class="col-md-4 blog-sidebar">
				<h3 class="pb-3 mb-4 font-italic border-bottom">À la une</h3>
				<div class="p-3 mb-3 bg-light rounded">
					<a href="#"><h4 class="font-italic">Forum IUT entreprises</h4></a>
					<p class="mb-0">Recrutez vos stagiaires BAC+2
					Mardi 19 Novembre 2019</p>
					<div class="bg-image-home w-100" style="height:100px;"></div>
				</div>
				<div class="p-3 mb-3 bg-light rounded">
					<a href="#"><h4 class="font-italic">Visite guidée d'Ob.i LAB, notre laboratoire d'objets numériques</h4></a>
					<p class="mb-0"></p>
					<div class="bg-image-home w-100" style="height:100px;"></div>
				</div>
			</aside><!-- /.blog-sidebar -->
		</div><!-- /.row -->
	</main><!-- /.container -->

{% endblock %}
