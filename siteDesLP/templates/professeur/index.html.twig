{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

{% if editMode %}
    <h1>Modification du professeur {{ prof.nomProfesseur }} {{ prof.prenomProfesseur }}</h1>
{% else %}
    <h1>Création d'un professeur</h1>
{% endif %}
	<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal" style="position: relative ;left: 1000px">Export File</button>

	<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title" id="exampleModalLabel">Exporter un CSV</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<form action="{{path("prof_importCsv")}}" method="post" >
					<div class="modal-body">
						<div class="input-group">
							<div class="input-group-prepend">
								<span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
							</div>
							<div class="custom-file">
								<input type="file" class="custom-file-input" id="inputGroupFile01"
									   aria-describedby="inputGroupFileAddon01">
								<label class="custom-file-label" for="inputGroupFile01">Choose file</label>
							</div>
						</div>
					</div>
					<button type="submit" class="btn btn-success mb-5" >Importer</button>
				</form>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
				</div>
			</div>
		</div>
	</div>

	{{ form_start(form) }}

	{{ form_row(form.nomProfesseur, {
		'label':'Nom de famille',
		'attr' : {
			'placeholder' : "Nom de famille"
		}
	}) }}
	{{ form_row(form.prenomProfesseur, {
		'label':'Prénom',
		'attr' : {
			'placeholder' : "Prénom"
		}
	}) }}

	{% if editMode %}
		{{ form_row(form.login, {
			'label':'Login de connexion',
			'attr' : {
				'placeholder' : "Login"
			}
		}) }}
		{{ form_row(form.mailAcademique, {
			'label':'Mail académique',
			'attr' : {
				'placeholder' : "Mail académique"
			}
		}) }}
	{% endif %}


	{% if editMode==false %}
		{{ form_row(form.new_password, {
			'label':'Mot de passe',
			'attr' : {
				'placeholder' : "Mot de passe"
			}
		}) }}
		{{ form_row(form.confirm_password, {'label': 'Confirmer mot de passe','attr' : {'placeholder' : "Confirmer le mot de passe" }}) }}
	{% endif %}

	{{ form_label(form.classes) }}
	{{ form_errors(form.classes) }}

	<div class='col'>
		{{ form_widget(form.classes) }} <br>
	</div>

{#	{% for classe in form.classes %}
	{% endfor %} #}


{% if editMode %}
	{{ form_row(form.classeResponsable, {'label':'Responsable de la classe'}) }}
{% endif %}

{# exemple de double liste pour les classes
<div class="row">
	<div class="col">
	<h3>Classes du professeur</h3>
		<div class="list-group">
			<button type="button" class="list-group-item list-group-item-action">
			Classe 1
			</button>
			<button type="button" class="list-group-item list-group-item-action">
			Classe 1
			</button>
			<button type="button" class="list-group-item list-group-item-action">
			Classe 1
			</button>
		</div>
	</div>

	<div class="col">
		<h3>Toutes les classes disponibles</h3>
        {% for classe in form.classes %}
		<div class="list-group">
			<button type="button" class="list-group-item list-group-item-action">
				nom de la classe
			</button>
		</div>
		{% endfor %}
	</div>
</div>
#}

	{# Bonton de création #}
	<button type="submit" class="btn btn-success mb-5">
	    {% if editMode %}
	        Modifier
	    {% else %}
	        Créer le professeur
	    {% endif %}
	</button>

	{# Affichage du buton supprimer
	   si on est en mode édition #}
	{% if editMode %}
		<a href="{{ path('prof_delete',{id:prof.id}) }}" class="btn btn-danger mb-5"> Supprimer </a>
	{% endif %}
{{ form_end(form) }}

{% endblock %}
