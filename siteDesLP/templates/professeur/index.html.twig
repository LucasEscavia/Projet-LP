{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

{% if editMode %}
    <h1>Modification du professeur n°{{ prof.id }}</h1>
{% else %}
    <h1>Création d'un professeur</h1>
{% endif %}

{{ form_start(form) }}

	{{ form_row(form.nomProfesseur, {
		'label':'Nom de famille',
		'attr' : {
			'placeholder' : "Nom de famille"
		}
	}) }}
	{{ form_row(form.prenomProfesseur, {
		'label':'Prénom',
		'attr' : {
			'placeholder' : "Prénom"
		}
	}) }}
	
	{% if editMode %}
		{{ form_row(form.login, {
			'label':'Login de connexion',
			'attr' : {
				'placeholder' : "Login"
			}
		}) }}
		{{ form_row(form.mailAcademique, {
			'label':'Mail académique',
			'attr' : {
				'placeholder' : "Mail académique"
			}
		}) }}
	{% endif %}

	{{ form_row(form.dateNaissance, { 'label':'Date de naissance' }) }}

	{% if editMode==false %}
		{{ form_row(form.password, {
			'label':'Mot de passe',
			'attr' : {
				'placeholder' : "Mot de passe"
			}
		}) }}
	{% endif %}

	{{ form_label(form.classes) }}
	{{ form_errors(form.classes) }}

	<div class='col'>
		{{ form_widget(form.classes) }} <br>
	</div>

{#	{% for classe in form.classes %}
	{% endfor %} #}


{% if editMode %}
	{{ form_row(form.classeResponsable, {'label':'Responsable de la classe'}) }}
{% endif %}

