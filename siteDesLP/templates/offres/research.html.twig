{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Mes offres d'emploi</h1>

    {% for msg in app.session.flashBag.get('delete') %}
    <div class="alert alert-success" role="alert">
        {{ msg }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {% endfor %}
    {% for msg in app.session.flashBag.get('success_modifie') %}
    <div class="alert alert-success" role="alert">
        {{ msg }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {% endfor %}

    <table id="tab_date" class="table table-striped table-bordered table-hover tableau-donnees" style="width:100%">
        <thead>
            <tr>
                <th scope="col">Date</th>
                <th scope="col">Titre</th>
                <th scope="col">Type</th>
                <th scope="col">Modifier</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>

        <tbody>
            {% for offre in offres %}
            <tr class="ligne">
                <th>{{offre.date | date('d/m/Y') }}</th>
                <td>{{offre.titre}}</td>
                <td>{{offre.typeOffre}}</td>
                <td><a href="{{ path('offre_modifier', {'id' : offre.id}) }}" class="edit-btn btn btn-warning active invisible">✎</a></td>
                <td><a href="{{ path('offre_supprimer', {'id': offre.id}) }}" class="edit-btn btn btn-danger active invisible">❌</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success" href="{{ path('offre_nouveau') }}" role="button">Ajouter une offre d'emploi</a>
{% endblock %}

{%  block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    {{ encore_entry_script_tags('data-tables') }}
{% endblock %}
