{% extends 'base.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    {% if editMode %}
        <h1>Modification d'un contact {{ contacts.nom }} {{ contacts.prenom }}</h1>
    {% else %}
        <h1>Demande de contact</h1>
    {% endif %}

    {{ form_start(form) }}

    {{ form_row(form.nom, {
        'label':'Nom de famille',
        'attr' : {
            'placeholder' : "Nom de famille"
        }
    }) }}
    {{ form_row(form.prenom, {
        'label':'Prénom',
        'attr' : {
            'placeholder' : "Prénom"
        }
    }) }}
    {{ form_row(form.mail, {
        'label':'Email',
        'attr' : {
            'placeholder' : "Email"
        }
    }) }}
    {{ form_row(form.telephone, {
        'label':'Numéro de Téléphone',
        'attr' : {
            'placeholder' : "Numéro de Téléphone"
        }
    }) }}

    {{ form_row(form.entreprise, {
        'label':'Entreprise',
        'attr' : {
            'placeholder' : 'Entreprise',
        }
    }) }}
    <p style="margin-bottom:2%;">Votre entreprise n'est pas dans la liste ?  &nbsp;&nbsp;<a href="{{ path('entreprise_create') }}" class="btn-sm btn-secondary mb-1">Ajouter mon entreprise</a></p>




    {# Bonton de création #}
    <button type="submit" class="btn btn-success mb-5">
        {% if editMode %}
            Modifier
        {% else %}
            Envoyer ma demande
        {% endif %}
    </button>

    {# Affichage du buton supprimer
       si on est en mode édition #}
    {% if editMode %}
        <a href="{{ path('contact_delete',{id:contacts.id}) }}" class="btn btn-danger mb-5"> Supprimer </a>
    {% endif %}
    {{ form_end(form) }}

{% endblock %}
