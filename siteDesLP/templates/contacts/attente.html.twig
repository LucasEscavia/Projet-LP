{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Contacts en attentes de validation</h1>

    {% for msg in app.session.flashBag.get('notDelete') %}
        <div class="alert alert-primary" role="alert">
            {{ msg }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    {% for msg in app.session.flashBag.get('goodMail') %}
        <div class="alert alert-primary" role="alert">
            {{ msg }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    {% for msg in app.session.flashBag.get('delete') %}
        <div class="alert alert-success" role="alert">
            {{ msg }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success" role="alert">
            {{ msg }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    {% for msg in app.session.flashBag.get('success_modifie') %}
        <div class="alert alert-success" role="alert">
            {{ msg }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}



    <table id="tab" class="table table-striped table-bordered table-hover tableau-donnees" style="width:100%">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Mail</th>
            <th scope="col">Numero de téléphone</th>
            <th scope="col">Entreprise</th>
            <th scope="col">Valider</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>

        <tbody>
        {% for contact in contacts %}
            <tr class="ligne">
                <td>{{contact.nom}}</td>
                <td>{{contact.prenom}}</td>
                <td>{{contact.mail}}</td>
                <td>{{contact.telephone}}</td>
                <td>{{contact.entreprise}}</td>
                <td><a href="{{ path('contact_valide', {'id' : contact.id}) }}" class="edit-btn btn btn-success active invisible">✎</a></td>
                <td><a href="{{ path('contact_delete', {'id' : contact.id}) }}" class="edit-btn btn btn-danger active invisible">❌</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{%  block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    {{ encore_entry_script_tags('data-tables') }}
{% endblock %}
