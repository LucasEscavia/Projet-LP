{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}

    {% for msg in app.session.flashBag.get('mdp_change') %}
        <div class="alert alert-success" role="alert">
            {{ msg }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    {% for msg in app.session.flashBag.get('mail_change') %}
        <div class="alert alert-success" role="alert">
            {{ msg }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <div class="btn-group" role="group" aria-label="Basic example">
        <a href="{{ path('contact_changer_mdp') }}"><button type="button" class="btn btn-secondary"><i class="fas fa-key"></i>&nbsp;&nbsp;Modifier mon mot de passe</button></a>
        <a href="{{ path('contact_changer_mail') }}"><button type="button" class="btn btn-secondary"><i class="fas fa-envelope"></i>&nbsp;&nbsp;Modifier mon mail</button></a>
    </div>

    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col"><i class="far fa-address-card"></i>&nbsp;&nbsp;Informations utilisateur</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <tr>
            <th scope="row"><i class="fas fa-id-badge"></i>&nbsp;&nbsp;Nom</th>
            <td>{{ contact.nom }}</td>
        </tr>
        <tr>
            <th scope="row"><i class="far fa-id-badge"></i>&nbsp;&nbsp;Pr√©nom</th>
            <td>{{ contact.prenom}}</td>
        </tr>
        <tr>
            <th scope="row"><i class="fas fa-users"></i>&nbsp;&nbsp;Mail</th>
            <td>
                {{ contact.mail }}
            </td>
        </tr>
        <tr>
            <th scope="row"><i class="far fa-paper-plane"></i>&nbsp;&nbsp;Entreprise</th>
            <td>{{ contact.entreprise }}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}
