{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <h1>Rechercher une promotion</h1>

    {% for message in app.flashes('successAdd') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    {% for message in app.flashes('successModif') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}

    <table id="tab" class="table table-striped table-bordered table-hover tableau-donnees" style="width:100%">
        <thead>
        <tr>
            <th scope="col">Année</th>
            <th scope="col">Modifier</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>
        <tbody>
        {% for promotion in promotions %}
            <tr class="ligne">
                <th id="{{ promotion.annee }}" >{{promotion.annee}}</th>
                <td><a href="{{ path('promotion_edit', {'id' : promotion.id}) }}" class="edit-btn btn btn-warning active invisible">✎</a></td>
                <td><a href="{{ path('promotion_delete', {'id' : promotion.id}) }}" class="delete-btn btn btn-danger active invisible">❌</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-success" href= {{ path('promotion_create')}} role="button">Créer une promotion</a>

{% endblock %}
{%  block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    {{ encore_entry_script_tags('data-tables') }}
{% endblock %}
