{% extends 'base.html.twig' %}

{% block title %}Demande de Convention de Stage{% endblock %}

{% block body %}
    <style>
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    {% for msg in app.session.flashBag.get('success') %}
        <div class="alert alert-success" role="alert">
            {{ msg }}
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    {% endfor %}
    <h1>Demande de convention </h1>

    <table id="tab" class="table table-striped table-bordered table-hover tableau-donnees" style="width:100%">
        <thead>
        <tr>
            <th scope="col">Etudiant</th>
            <th scope="col">Entreprise</th>
            <th scope="col">Détails </th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>

        <tbody>
        {% for stage in stageForms %}
            <tr class="ligne">
                <td>{{stage.etudiant}}</td>
                <td>{{stage.nomEntreprise}}</td>
                <td><a href="{{ path('stage_informations', {'id' : stage.id}) }}" class="edit-btn btn btn-warning active invisible">✎</a></td>
                <td><a href="{{ path('stage_supprimer', {'id' : stage.id}) }}" class="edit-btn btn btn-danger active invisible">❌</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



{% endblock %}


{%  block javascripts %}
    {{ parent() }}
    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    {{ encore_entry_script_tags('data-tables') }}
{% endblock %}