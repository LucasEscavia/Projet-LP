<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Site des LP{% endblock %}</title>
        {% block stylesheets %}
          <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.20/b-1.6.1/r-2.2.3/sc-2.0.1/sl-1.3.1/datatables.min.css"/>
        <link href="https://bootswatch.com/4/journal/bootstrap.min.css" rel="stylesheet">
        {{encore_entry_link_tags('app')}}

        {% endblock %}

    </head>
    <body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light my_nav">
    <a class="navbar-brand my_nav_item" href="{{ path('home') }}">Site des lp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('home') }}">Accueil <span class="sr-only"></span></a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle my_nav_item" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            À propos
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="{{ path('informations_globales') }}">L'IUT</a>
            <a class="dropdown-item" href="{{ path('informations_classes') }}">Les licences</a>
          </div>
        </li>
        {% if is_granted('ROLE_SECRETAIRE') %}
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{path('article_search') }}">Articles <span class="sr-only"></span></a>
        </li>
        {% endif %}
         {% if is_granted('ROLE_PROFESSEURRESPONSABLE') or is_granted('ROLE_ADMIN') %}
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('research_etudiant') }}">Étudiants <span class="sr-only"></span></a>
        </li>
        {% endif %}
        {% if is_granted('ROLE_PROFESSEURRESPONSABLE') %}
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('informations_classes_print') }}">Informations licence<span class="sr-only"></span></a>
        </li>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('classe_research') }}">Classes <span class="sr-only"></span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('prof_search') }}">Professeurs <span class="sr-only"></span></a>
        </li>
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('secretaire_search') }}">Secrétaires <span class="sr-only"></span></a>
        </li>
         <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('informations_globales_edit', {'id' : 1}) }}">Informations globales<span class="sr-only"></span></a>
        </li>
 {% endif %}
      </ul>
      <ul class="nav navbar-nav ml-auto">
        {% if not app.user %}
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('connexion') }}">Connexion <span class="sr-only"></span></a>
        </li>
        {% else %}
            <div class="dropdown dropleft float-right">
                <button type="button" class="btn btn-primary dropdown-toggle" id="userItem" data-toggle="dropdown">
                  {{ app.user }}
                </button>
                <div class="dropdown-menu">
                <h6 class="dropdown-header">{{ app.user }}</h6>
                   {% if is_granted('ROLE_ADMIN') %}
                            <a class="dropdown-item" href="{{ path('admin_change_password') }}">Modifier mon mot de passe</a>
                  {% elseif not is_granted('ROLE_ADMIN') and app.user %}
                  <a class="dropdown-item" href={% if is_granted('ROLE_ETUDIANT') %}"{{ path('etudiant_account') }}"{% endif %}{% if is_granted('ROLE_PROFESSEUR') %}"{{ path('professeur_account') }}"{% endif %}{% if is_granted('ROLE_SECRETAIRE') %}"{{ path('secretaire_account') }}"{% endif %}>Mon compte<span class="sr-only"></span></a>
                  {% endif %}
                            <a class="dropdown-item" href="{{ path('deconnexion') }}" data-toggle="modal" data-target="#deconnexionModal" id="deconnect" >Déconnexion <span class="sr-only"></span></a>
                </div>
            </div>
    {% endif %}
      </ul>

    </div>
  </nav>

  <div class="container">
        {% block body %}

        {% endblock %}
  </div>
  <div class="modal fade" id="deconnexionModal" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
          <div class="modal-content">
              <div class="modal-header">
                  <h5 class="modal-title" id="modalLabel">Deconnexion</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                  </button>
              </div>
              <div class="modal-body">
                  Vous allez être deconnecté
              </div>
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Fermer</button>
                  <a role="button" class="btn btn-success" href=" {{ path('deconnexion') }}" >Continuer</a>
              </div>
          </div>
      </div>
  </div>

  <br/>
  <br/>
  <br/>
<!-- Footer -->
<footer class="page-footer font-small blue">

  <!-- Copyright -->
  <div class="footer-copyright text-center py-3">© {{"now"|date("Y") }} Copyright - Site des LP
  </div>
  <!-- Copyright -->

</footer>
<!-- Footer -->
  {% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

  {% endblock %}
    </body>
</html>
