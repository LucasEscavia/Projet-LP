<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Site des LP{% endblock %}</title>
        {% block stylesheets %}
          <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.20/b-1.6.1/r-2.2.3/sc-2.0.1/sl-1.3.1/datatables.min.css"/>
        <link href="https://bootswatch.com/4/journal/bootstrap.min.css" rel="stylesheet">
        {{encore_entry_link_tags('app')}}

        {% endblock %}

    </head>
    <body>

  <nav class="navbar navbar-expand-lg navbar-light bg-light my_nav">
    <a class="navbar-brand my_nav_item" href="{{ path('home') }}">Site des lp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('home') }}">Accueil <span class="sr-only"></span></a>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle my_nav_item" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            À propos
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="{{ path('informations_globales') }}">L'IUT</a>
            <a class="dropdown-item" href="{{ path('informations_classes') }}">Les licences</a>
          </div>
        </li>
         {% if is_granted('ROLE_PROFESSEURRESPONSABLE') or is_granted('ROLE_ADMIN') %}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle my_nav_item" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Etudiants
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="{{ path('etudiant_create') }}">Créer un étudiant</a>
            <a class="dropdown-item" href="{{ path('research_etudiant') }}">Rechercher un étudiant</a>
          </div>
        {% endif %}
        {% if is_granted('ROLE_PROFESSEURRESPONSABLE') %}
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('informations_classes_print') }}">Informations licence<span class="sr-only"></span></a>
        </li>
        {% endif %}
        {% if is_granted('ROLE_ADMIN') %}
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle my_nav_item" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Classes
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="{{ path('classe_create') }}">Créer une classe</a>
            <a class="dropdown-item" href="{{ path('classe_research') }}">Rechercher une classe</a>
          </div>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle my_nav_item" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Professeurs
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <a class="dropdown-item" href="{{ path('prof_add') }}">Créer un professeur</a>
            <a class="dropdown-item" href="{{ path('prof_search') }}">Rechercher un professeur</a>
          </div>
        </li>
         <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('informations_globales_edit', {'id' : 1}) }}">Informations globales<span class="sr-only"></span></a>
        </li>
 {% endif %}
  {% if not is_granted('ROLE_ADMIN') and app.user %}
         <li class="nav-item active">
          <a class="nav-link my_nav_item" href={% if is_granted('ROLE_ETUDIANT') %}"{{ path('etudiant_account') }}"{% endif %}{% if is_granted('ROLE_PROFESSEUR') %}"{{ path('professeur_account') }}"{% endif %}>Mon compte<span class="sr-only"></span></a>
        </li>
          {% endif %}
 {% if not app.user %}
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('connexion') }}">Connexion <span class="sr-only"></span></a>
        </li>
        {% else %}
        <li class="nav-item active">
          <a class="nav-link my_nav_item" href="{{ path('deconnexion') }}" onclick='return confirm("Êtes vous sûr de vouloir vous déconnecter ?")'>Déconnexion <span class="sr-only"></span></a>
        </li>
        {% endif %}
      </ul>

    </div>
  </nav>
  <div class="container">
        {% block body %}
        {% endblock %}
  </div>
<!-- Footer -->
<footer class="page-footer font-small blue">

  <!-- Copyright -->
  <div class="footer-copyright text-center py-3">© {{"now"|date("Y") }} Copyright - Site des LP
  </div>
  <!-- Copyright -->

</footer>
<!-- Footer -->
  {% block javascripts %}
    <script src="https://code.jquery.com/jquery-3.3.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>